  <!-- PRODUCTS -->



  <section id="products shop" class="shoes pt-5 products shop">

    <div class="container mt-5">
      <form action="/product" id="product" method="get">
        <div id="styled-select">
          <select class="form-select form-select-sm select-picker text-uppercase" aria-label=".form-select-sm example"
            {{!-- onclick="document.getElementById('product').submit()" --}}
            onchange='if(this.value != 0) { this.form.submit(); }' name="selectpicker">

            <option selected>Search By Category</option>
            <option id="product" name="women" class="all" value="all">all</option>
            <option id="product" name="women" class="men" value="men">Mens</option>
            <option id="product" name="women" class="women" value="women">Womens</option>
            <option id="product" name="select" value="kids">Kids</option>
          </select>
        </div>
        {{!-- <input type="submit" hidden /> --}}
      </form>

      <div class="card  rborder">
        <div class="card-body text-center">
          {{!-- {{#if products}} --}}
          <h3 id="new" class="text-center heading-text text-uppercase ">
            {{ products.category }} PRODUCTS
          </h3>
          {{!-- {{/if}} --}}
        </div>
      </div>




      <div class="row row-cols-1 row-cols-md-4 pt-5 g-5 text-center">
        {{#each products}}
        <div class="col ">
          <div class="card rborder aborder zoom h-100 shop-item">
            <img src="images/{{this.image}}" class="card-img-top shop-item-img" alt="{{this.image}}">
            <div class="card-body shop-item-details">

              <h6 class="card-title shop-item-title">{{this.name}}</h6>
              <h5 class="text-center price shop-item-price text-danger">â‚¹ {{this.price}}</h5>
